{
      "compilerOptions": {
        "composite": true, // Required for project references
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "module": "ESNext",
        "target": "ES2020",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"]
      },
      "include": ["./**/*.ts"],
      "exclude": ["node_modules"]
    }